# Voice Agent Environment Variables
# Copy to .env and fill in your values

# ===================
# Telnyx (Telephony)
# ===================
# Get from: https://portal.telnyx.com
TELNYX_API_KEY=your_telnyx_api_key
TELNYX_PHONE_NUMBER=+358401234567
TELNYX_CONNECTION_ID=your_voice_app_connection_id
TELNYX_WEBHOOK_SECRET=your_webhook_signing_secret

# ===================
# Deepgram (STT)
# ===================
# Get from: https://console.deepgram.com
DEEPGRAM_API_KEY=your_deepgram_api_key

# ===================
# ElevenLabs (TTS)
# ===================
# Get from: https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=your_voice_id

# ===================
# Clawdbot Callback
# ===================
# URL where voice events are sent to Clawdbot
CALLBACK_URL=http://host.docker.internal:3000/api/voice-callback

# Public URL for Telnyx webhooks (use ngrok for dev)
PUBLIC_URL=https://your-public-url.ngrok.io

# ===================
# Agent Config
# ===================
LOG_LEVEL=INFO
MAX_CALL_DURATION=600
MAX_CONCURRENT_CALLS=5
PORT=8080
